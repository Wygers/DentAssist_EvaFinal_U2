@model IEnumerable<DentAssist.Models.Turno>

@{
    ViewData["Title"] = "Listado de Turnos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="text-primary"><i class="bi bi-calendar-check"></i> @ViewData["Title"]</h5>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Turno
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-info-circle"></i> No hay turnos registrados aún.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Duración</th>
                        <th>Estado</th>
                        <th>Paciente</th>
                        <th>Odontólogo</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaHora.ToString("g")</td>
                            <td>@item.DuracionMinutos minutos</td>
                            <td>
                                <span class="badge
                                            @(item.Estado == "Pendiente" ? "bg-warning text-dark" :
                                                                            item.Estado == "Confirmado" ? "bg-info" :
                                                                            item.Estado == "Finalizado" ? "bg-success" :
                                                                            item.Estado == "Cancelado" ? "bg-danger" : "bg-secondary")">
                            @item.Estado
                        </span>
                    </td>
                    <td>@item.Paciente?.Nombre</td>
                    <td>@item.Odontologo?.Nombre (@item.Odontologo?.Especialidad)</td>
                    <td class="text-center text-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Editar turno">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1" title="Ver detalles del turno">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar turno" onclick="return confirm('¿Está seguro que desea eliminar este turno?');">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>

                    </td>
                </tr>
                                }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
